<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="16dp"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/imageFilterView"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:background="@color/white" />
        <TextView
            android:id="@+id/main_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="24"
            android:gravity="center"
            android:layout_margin="16dp"
            android:textSize="84sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/temperature_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="\u00b0 C"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/main_temperature"
            app:layout_constraintTop_toTopOf="@+id/main_temperature" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/weather_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Haze"
            tools:drawableStart="@drawable/ic_waves"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/main_temperature"
            app:layout_constraintStart_toStartOf="@+id/main_temperature"
            app:layout_constraintTop_toBottomOf="@+id/main_temperature" />

        <TextView
            android:id="@+id/weather_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_margin="16dp"
            tools:text="Overcast clouds"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>