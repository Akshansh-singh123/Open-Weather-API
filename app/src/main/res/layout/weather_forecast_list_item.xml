<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="16dp"
    android:layout_width="match_parent"
    android:layout_height="440dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/imageFilterView"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/secondaryDarkColor"
        android:background="@android:color/transparent">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.15"
            android:background="@color/white" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/_5_day_forecast"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frameLayout" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/main_temperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toTopOf="@+id/main_temperature">
            <TextView
                android:id="@+id/day_precipitation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="Precipitation Chance: 7.5%" />
            <TextView
                android:id="@+id/day_wind_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="Wind speed: 21 km/h" />
            <TextView
                android:id="@+id/day_humidity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="Humidity: 75%" />
        </LinearLayout>
        <TextView
            android:id="@+id/weather_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            tools:text="Fri, 4 pm, Rainy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/header_title"/>

        <ImageView
            android:id="@+id/main_weather_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/main_icon"
            app:layout_constraintBottom_toBottomOf="@+id/main_temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_description_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="72sp"
            app:layout_constraintStart_toEndOf="@+id/main_weather_icon"
            app:layout_constraintTop_toBottomOf="@id/weather_description_text"
            tools:text="24" />

        <TextView
            android:id="@+id/temperature_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="\u00b0 C"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_temperature"
            app:layout_constraintStart_toEndOf="@+id/main_temperature"
            app:layout_constraintTop_toTopOf="@+id/main_temperature" />
        <com.google.android.material.slider.Slider
            android:id="@+id/hourly_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:thumbColor="@color/white"
            app:trackColor="@color/white"
            app:labelStyle="@style/Widget.MaterialComponents.Tooltip"
            app:labelBehavior="floating"
            app:tickColorInactive="@color/secondaryDarkColor"
            tools:stepSize="3"
            tools:valueFrom="0"
            tools:valueTo="21"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/main_temperature"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="@id/hourly_slider"
            app:layout_constraintStart_toStartOf="@id/hourly_slider"
            app:layout_constraintTop_toBottomOf="@id/hourly_slider" />
        <FrameLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:alpha="0.15"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>